{
    "manifest_version": 2,
    "name": "MiniURL",
    "version": "1.0.0",
    "description": "MiniURL helps you copy a shortened URL of current web page.",
    "icons": {
        "128": "icon_128.png"
    },
    "background": {
        "persistent": false,
        "scripts": [
            "bg.js"
        ]
    },
    "permissions": [
        "activeTab",
        "clipboardWrite",
        "http://dwz.cn/create.php"
    ],
    "browser_action": {
        "default_title": "Click to copy shortened URL",
        "default_icon": "icon_19.png",
        "default_popup": "popup.html"
    },
    "author": "zyfdegh"
}

